#include <iostream>
using namespace std;

/*
 * This program calculates the factorial of a non-negative integer
 * using a recursive function. The factorial of a number n (denoted as n!)
 * is the product of all positive integers up to n. Factorial is defined
 * as:
 *   - n! = n Ã— (n-1)! for n > 1
 *   - 0! = 1 and 1! = 1 (base cases)
 */

long long factorial(int n) {
    if (n <= 1) {
        return 1; // Base case: factorial of 0 or 1 is 1
    }
    return n * factorial(n - 1); // Recursive case: n! = n * (n-1)!
}

int main() {
    int number;
    cout << "Enter a non-negative integer: ";
    cin >> number;

    // Check if the input number is non-negative
    if (number < 0) {
        cout << "Factorial is not defined for negative numbers." << endl;
    } else {
        long long result = factorial(number); // Calculate factorial
        cout << "Factorial of " << number << " is " << result << endl; // Display result
    }

    return 0; // End of the program
}
